<%- include('../partials/header') %>
  <%- include('../partials/navbar') %>


    <div class="container" style="margin-top: 5rem;">
      <%- include('../partials/flash') %>
      
      <h6 class="display-6 mb-3">My Cart</h6>
      <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8">

          
           <% for(let item of userCart){ %> 
            <div class="card mb-3" style="max-width: 540px;">
              <div class="row g-0">
                <div class="col-md-4">
                  <img src="<%= item.img%> " class="img-fluid rounded-start " style="height: 150px; width: 130px;"alt="...">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title"><%= item.name %> </h5>
                    <p class="card-text"><%= item.desc.substring(0,70) %> </p>
                    <form action="/user/<%= currentUser._id %>/cart/<%= item._id %>?_method=DELETE" method="POST">
                     <button class="btn btn-sm btn-danger">Remove</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <% } %> 
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
          <% totalAmount=0 %> 
          <h6 class="display-6">Products</h6>
          <ul class="list-group">
              <% for(let item of userCart){ %> 
                <li class="list-group-item"><%= item.name %> - <strong>&#8377; <%= item.price %></strong></li>
                    <% totalAmount+=item.price %> 
                <% } %> 
          </ul>
          <div class="mt-3">
            <!-- <p class="fw-bold">Total Amount - &#8377; <%= totalAmount %> </p> -->
            <li class="list-group-item">Total Amount - <strong>&#8377; <%= totalAmount %></strong></li>
            <a href="/cart/payment" class="btn btn-success mt-4 ">Proceed To Pay</a>

          </div>
        </div>
          
          
      </div>
    
    </div>

    <%- include('../partials/footer') %>